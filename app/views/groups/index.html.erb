<p id="notice"><%= notice %></p>

<h1>Groups</h1>

<br />

<%= link_to raw('<span class="glyphicon glyphicon-plus"></span>&nbsp;&nbsp;Group'), new_group_path, class: "btn btn-success" %>

<br />
<br />

<table class="table table-hover">
  <thead>
    <tr>
      <th class="text-center">Group code</th>
      <th class="text-center">Name</th>
      <th class="text-center">Description</th>
      <th class="text-center" colspan="3">Options</th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td class="text-center"><%= group.show_id %></td>
        <td class="text-center"><%= group.name %></td>
        <td class="text-center"><%= group.show_description %></td>
        <td class="text-center"><%= link_to raw('<span class="glyphicon glyphicon-eye-open"></span>&nbsp;&nbsp;Show'), group, class: "btn btn-info" %></td>
        <td class="text-center"><%= link_to raw('<span class="glyphicon glyphicon-pencil"></span>&nbsp;&nbsp;Edit'), edit_group_path(group), class: "btn btn-warning" %></td>
        <td class="text-center"><%= link_to raw('<span class="glyphicon glyphicon-trash"></span>&nbsp;&nbsp;Delete'), group, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
