<div class="container pt-5">
  <h2>Log in</h2>

  <br />

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <%= f.label :email, class: "input-group-text" %>
      </div>
      <%= f.email_field :email, class: "form-control", autocomplete: "email" %>
    </div>

    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <%= f.label :password, class: "input-group-text" %>
      </div>
      <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="custom-control custom-checkbox">
        <%= f.check_box :remember_me, class: "custom-control-input", id: "checkRPass" %>
        <%= f.label :remember_me, class: "custom-control-label", for: "checkRPass" %>
      </div>
    <% end %>

    <br />

    <div class="actions">
      <%= f.submit "Log in", class: "btn btn-success" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
