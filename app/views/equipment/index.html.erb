<h1>Equipment</h1>

<br />

<%= link_to raw('<span class="glyphicon glyphicon-plus"></span>&nbsp;&nbsp;Equipment'), new_equipment_path, class: "btn btn-success" %>

<br />
<br />

<table class="table table-hover">
  <thead>
    <tr>
      <th class="text-center">Group</th>
      <th class="text-center">Code</th>
      <th class="text-center">Equipment</th>
      <th class="text-center">Brand</th>
      <th class="text-center">Model</th>
      <th class="text-center">Description</th>
      <th class="text-center">Price</th>
      <th class="text-center" colspan="3">Options</th>
    </tr>
  </thead>

  <tbody>
    <% @equipment.each do |equipment| %>
      <tr>
        <td class="text-center"><%= link_to Group.find(equipment.group_id).name, group_path(equipment.group_id) %></td>
        <td class="text-center"><%= equipment.full_code %></td>
        <td class="text-center"><%= equipment.name %></td>
        <td class="text-center"><%= equipment.brand %></td>
        <td class="text-center"><%= equipment.model %></td>
        <td class="text-center"><%= equipment.show_description %></td>
        <td class="text-center"><%= equipment.price %></td>
        <td class="text-center"><%= link_to raw('<span class="glyphicon glyphicon-eye-open"></span>&nbsp;&nbsp;Show'), equipment, class: "btn btn-info" %></td>
        <td class="text-center"><%= link_to raw('<span class="glyphicon glyphicon-pencil"></span>&nbsp;&nbsp;Edit'), edit_equipment_path(equipment), class: "btn btn-warning" %></td>
        <td class="text-center"><%= link_to raw('<span class="glyphicon glyphicon-trash"></span>&nbsp;&nbsp;Delete'), equipment, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
