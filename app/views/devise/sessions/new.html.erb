<h2><%= translate 'devise.login.title' %></h2>

<br />

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <%= f.label :email, "#{translate 'devise.login.email'}", for: "loginInputEmail" %>
  <%= f.email_field :email, class: "form-control", id: "loginInputEmail", autocomplete: "email", placeholder: "email@example.com" %>

  <br />

  <%= f.label :password, "#{translate 'devise.login.password'}" %>
  <%= f.password_field :password, class: "form-control", autocomplete: "current-password", placeholder: "******" %>
  <small id="notSharePassword" class="form-text text-muted"><%= translate 'devise.login.never_share_password' %></small>

  <br />

  <% if devise_mapping.rememberable? %>
    <div class="custom-control custom-switch">
      <%= f.check_box :remember_me, class: "custom-control-input form-control-lg", id: "checkRPass" %>
      <%= f.label :remember_me, "#{translate 'devise.login.remember_me'}", class: "custom-control-label", for: "checkRPass" %>
    </div>
  <% end %>

  <br />

  <div class="actions">
    <%= f.submit "#{translate 'devise.login.login'}", class: "btn btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>