<p id="notice"><%= notice %></p>

<p>
  <strong>Group code:</strong>
  <%= @group.show_id %>
</p>

<p>
  <strong>Name:</strong>
  <%= @group.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @group.show_description %>
</p>

<br />
<% if can? :edit, Group %>
  <%= link_to raw('<span class="glyphicon glyphicon-pencil"></span>&nbsp;&nbsp;Edit'), edit_group_path(@group), class: "btn btn-warning" %>
  <br />
  <br />
<% end %>

<%= link_to raw('<span class="glyphicon glyphicon-arrow-left"></span>&nbsp;&nbsp;Back'), groups_path, class: "btn btn-info" %>
 
<hr class="stylized">

<h3> Group Equipments </h3>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Code</th>
      <th>Equipment</th>
      <th colspan="3">Options</th>
    </tr>
  </thead>

  <tbody>
    <% @equips_by_group.each do |equips_group| %>
      <tr>
        <td><%= equips_group.full_code %></td>
        <td><%= equips_group.name %></td>
        <% if can? :read, Equipment %>
          <td>
            <%= link_to raw('<span class="glyphicon glyphicon-eye-open"></span>&nbsp;&nbsp;Show'), equips_group, class: "btn btn-info" %>
          </td>
        <% end %>
        <% if can? :edit, Equipment %>
          <td>
            <%= link_to raw('<span class="glyphicon glyphicon-pencil"></span>&nbsp;&nbsp;Edit'), edit_equipment_path(equips_group), class: "btn btn-warning" %>
          </td>
        <% end %>
        <% if can? :delete, Equipment %>
          <td>
            <%= link_to raw('<span class="glyphicon glyphicon-trash"></span>&nbsp;&nbsp;Delete'), equips_group, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
